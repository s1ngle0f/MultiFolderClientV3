<Window x:Class="MultiFolderClientV3.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiFolderClientV3"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="800" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="175"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="50"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Background="#DDDDDD">
            <Image Grid.Row="0" Grid.Column="1" Height="17" Width="17" HorizontalAlignment="Right">

            </Image>
        </Grid>
        <Label Grid.Row="1" Grid.Column="0" Content="MultiFolder" VerticalAlignment="Center" HorizontalAlignment="Left" 
               Margin="5,0,0,0" FontSize="18"/>
        <Label Grid.Row="1" Grid.Column="1" Content="UserName" VerticalAlignment="Center" 
               HorizontalAlignment="Right" Margin="0,0,5,0" FontSize="18"/>
        <StackPanel Grid.Row="2" Grid.Column="0" Margin="10,0,10,10" Orientation="Vertical">
            <TextBox Height="20" VerticalAlignment="Top" Margin="0,5,0,0">

            </TextBox>
            <TextBox Height="20" VerticalAlignment="Top" Margin="0,5,0,0">

            </TextBox>
            <Button Height="20" Width="75" Margin="0,5,0,0">
                
            </Button>
        </StackPanel>
        <Grid Grid.Row="2" Grid.Column="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
        </Grid>
    </Grid>
</Window>
